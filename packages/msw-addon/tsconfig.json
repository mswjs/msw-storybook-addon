{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@build-time/initialize": ["./src/initialize.d.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
